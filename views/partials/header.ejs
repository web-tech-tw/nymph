<header class="sticky top-0 z-50 bg-white border-b border-gray-100 shadow-sm" x-data="{ open: false }">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <!-- Logo -->
            <a href="/" class="flex items-center space-x-3 flex-shrink-0">
                <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white font-bold text-sm">N</div>
                <span class="text-lg font-bold text-gray-900">Nymph <span class="text-gray-400 font-normal text-sm">寧芙</span></span>
            </a>

            <!-- Desktop Nav -->
            <nav class="hidden md:flex items-center space-x-8">
                <a href="#features" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">功能特色</a>
                <a href="#platforms" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">整合平台</a>
                <a href="#tools" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">AI 工具</a>
                <a href="/api-docs" class="text-sm text-gray-600 hover:text-blue-600 transition-colors">API 文件</a>
            </nav>

            <!-- CTA -->
            <div class="hidden md:flex items-center space-x-3">
                <a href="https://github.com/web-tech-tw/nymph"
                   target="_blank" rel="noopener noreferrer"
                   class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                        <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
                    </svg>
                    GitHub
                </a>
            </div>

            <!-- Mobile menu button -->
            <button @click="open = !open" class="md:hidden p-2 rounded-lg text-gray-600 hover:bg-gray-100 transition-colors">
                <svg x-show="!open" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                </svg>
                <svg x-show="open" x-cloak class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div x-show="open" x-cloak x-transition class="md:hidden bg-white border-t border-gray-100 px-4 py-3 space-y-2">
        <a href="#features" @click="open=false" class="block py-2 text-sm text-gray-700 hover:text-blue-600">功能特色</a>
        <a href="#platforms" @click="open=false" class="block py-2 text-sm text-gray-700 hover:text-blue-600">整合平台</a>
        <a href="#tools" @click="open=false" class="block py-2 text-sm text-gray-700 hover:text-blue-600">AI 工具</a>
        <a href="/api-docs" class="block py-2 text-sm text-gray-700 hover:text-blue-600">API 文件</a>
        <a href="https://github.com/web-tech-tw/nymph" target="_blank" rel="noopener noreferrer" class="block py-2 text-sm text-blue-600 font-medium">GitHub →</a>
    </div>
</header>
